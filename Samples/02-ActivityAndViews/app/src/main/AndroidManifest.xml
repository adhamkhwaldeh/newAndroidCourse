<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.son.jawad.activitylifecycle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Life cycle started-->
        <activity
            android:name=".LifeCycle.FirstActivity"
            android:theme="@style/SecondTheme">

        </activity>

        <activity android:name=".LifeCycle.SecondActivity">

        </activity>
        <activity android:name=".LifeCycle.ThirdActivity">

        </activity>
        <activity android:name=".LifeCycle.FourthActivity">

        </activity>
        <!--Life cycle ended-->

        <!--Layout started-->
        <activity android:name=".Layouts.FrameActivity" />
        <activity android:name=".Layouts.LayoutsActivity" />
        <activity android:name=".Layouts.RelativeActivity" />
        <activity android:name=".Layouts.TableActivity" />
        <!--Layout ended-->

        <activity android:name=".Widgets.AutoCompleteActivity" />
        <activity android:name=".Widgets.ButtonActivity" />
        <activity android:name=".Widgets.CustomActivity" />
        <activity android:name=".Widgets.DateTimeActivity" />
        <activity android:name=".Widgets.MenuActivity" />
        <activity android:name=".Widgets.RatingActivity" />
        <activity android:name=".Widgets.SeekBarActivity" />
        <activity android:name=".Widgets.SpinnerActivity" />

        <activity android:name=".Widgets.WebviewActivity" />

        <activity android:name=".Widgets.UIActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>